<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.polewearshop.review.dao.ReviewDAO">

	<insert id="insertReview" parameterType="map">
		INSERT INTO `review`
		(
			`productId`
			,`productName`
			,`loginId`
			,`subject`
			,`content`
			,`reviewImage`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{productId}
			,#{productName}
			,#{loginId}
			,#{subject}
			,#{content}
			,#{reviewImage}
			,NOW()
			,NOW()
		)
	</insert>
	
	<select id="selectReviewList" resultType="com.polewearshop.review.model.Review">
		SELECT
			`id`
			,`productId`
			,`productName`
			,`loginId`
			,`subject`
			,`content`
			,`reviewImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`review`
		ORDER BY
			`id` DESC
	
	</select>
	
	<select id="selectReviewListByLoginId" resultType="com.polewearshop.review.model.Review">
		SELECT
			`id`
			,`productId`
			,`productName`
			,`loginId`
			,`subject`
			,`content`
			,`reviewImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`review`
		WHERE
		 	`loginId` = #{loginId}
		 ORDER BY
			`id` DESC
	</select>

	<select id="selectReviewByProductIdAndLoginId" parameterType="map" resultType="com.polewearshop.review.model.Review">
		SELECT
			`id`
			,`productId`
			,`productName`
			,`loginId`
			,`subject`
			,`content`
			,`reviewImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`review`
		WHERE
		 	`loginId` = #{loginId}
		And
			`productId` = #{productId}
		ORDER BY
			`id` DESC
	</select>
	
	<select id="selectReviewById" resultType="com.polewearshop.review.model.Review">
		SELECT
			`id`
			,`productId`
			,`productName`
			,`loginId`
			,`subject`
			,`content`
			,`reviewImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`review`
		WHERE
		 	`id` = #{id}
	</select>
	
	<delete id="deleteReviewById">
		DELETE FROM `review`
	 	WHERE
	 		`id` = #{id}
	
	</delete>
</mapper>