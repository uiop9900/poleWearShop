<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.polewearshop.notice.dao.NoticeDAO">
	<insert id="insertNotice" parameterType="map">
		INSERT INTO	`notice`
		(
			`subject`
			,`content`
			,`noticeImage`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{subject}
			,#{content}
			,#{noticeImage}
			,NOW()
			,NOW()
		)
		
	</insert>

	<select id="selectNoticeList" resultType="com.polewearshop.notice.model.Notice">
		SELECT 
			`id`
			,`subject`
			,`content`
			,`noticeImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`notice`
		ORDER BY
			`id` DESC
	</select>
	
	<select id="selectNoticeById" resultType="com.polewearshop.notice.model.Notice">
		SELECT 
			`id`
			,`subject`
			,`content`
			,`noticeImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`notice`
		WHERE 
			`id` = #{id}
	</select>
	
	<update id="updateNoticeById" parameterType="map">
		UPDATE `notice`
		SET
			`subject` = #{subject}
			,`content` = #{content}
			,`noticeImage` = #{noticeImage}
		WHERE
			`id` = #{id}
	</update>

</mapper>